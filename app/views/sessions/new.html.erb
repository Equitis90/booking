<div class="well login-form">
  <h1>Login</h1>

  <%= form_tag '/login' do %>
      <table>
        <tr>
          <td>Login: </td><td><%= text_field_tag :login %></td>
        </tr>
        <tr>
          <td>Password: </td><td><%= password_field_tag :password %></td>
        </tr>
      </table>
      <br>
      <%= submit_tag "Submit" %>
  <% end %>
</div>
