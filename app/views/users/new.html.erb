<div class="well login-form">
  <h1>Registration form</h1>

  <%= form_for :user, url: '/users' do |f| %>
      <table>
        <tr>
          <td>Login: </td><td><%= f.text_field :login %></td>
        </tr>
        <tr>
          <td>Password: </td><td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td>Password Confirmation: </td><td><%= f.password_field :password_confirmation %></td>
        </tr>
      </table>
      <br>
      <%= f.submit "Submit" %>
  <% end %>
</div>